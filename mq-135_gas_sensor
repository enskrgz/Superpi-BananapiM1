

import RPi.GPIO as GPIO
from time import sleep

bzztime=0.5
bzzdelay=2
bzzpin=25

GPIO.setmode(GPIO.BCM)
GPIO.setup(bzzpin, GPIO.OUT) #buzzer pin define
GPIO.setup(24,GPIO.IN)
GPIO.output(bzzpin,False)
try:
        while True:
             if GPIO.input(24):
                GPIO.output(bzzpin, True)
finally:
        print("cleanup")
        GPIO.cleanup()





