import RPi.GPIO as GPIO
from time  import sleep

bzztime=0.5
bzzdelay=2
bzzpin=25

GPIO.setmode(GPIO.BCM)
GPIO.setup(4,GPIO.IN)
GPIO.setup(bzzpin, GPIO.OUT)  #buzzer pin define
try:
     while True:
     if  GPIO.input(4):
        GPIO.output(bzzpin, True)        
     else:
        print("yanlış porta bağladın")
     sleep(1)
finally:
    print("cleanup")
    GPIO.cleanup()





